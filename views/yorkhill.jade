
extends layout


block content
  h1= title
  a(href= "/maincampus")
    button Carl Hansen Gym on Main Campus
  a(href= "/")
      button Home Page
  p Welcome to #{title}
  h3 Hours of Operation:
   p Monday - Thursday 7am-9pm
   p Friday            7am-7pm
   p Saturday/Sunday   9am-7pm
  - var counter = 0;
  p There are currently 0 machines out of #{machines} machines available

  h1 News and Announcements:
    h3 The fitness center will be closed for Friday until 1pm!

  button(onclick='removeperson()') Remove a person.
  button(onclick='addperson()') Add a person.

  script.
    var inUse = 0
    var ms = #{machines}
    function removeperson(e) {
      inUse += 1
      if (inUse < 20) {
        alert(` machine #${ms - inUse} assigned`)
      } else {
        alert('All machines are taken, please try again later.')
      }
    }
    function addperson(e) {
      inUse += 1
      if (inUse < 20) {
        alert(` machine #${ms + inUse} assigned`)
      } else {
        alert('All machines are taken, please try again later.')
      }
    }

   





